{
    "name"              : "jbzoo/retry",
    "type"              : "library",
    "description"       : "Tiny PHP library providing retry functionality with multiple backoff strategies and jitter support",
    "license"           : "MIT",
    "keywords"          : [
        "jbzoo",
        "jitter",
        "retry",
        "backoff",
        "middleware",
        "back-off",
        "retry-after",
        "failure",
        "restart",
        "retryable"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"  : "Joseph Szobody",
            "email" : "joseph@stechstudio.com",
            "role"  : "author"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php" : "^8.1"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.1"
    },

    "replace"           : {
        "stechstudio/backoff" : "*"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Retry\\" : "src"},
        "files" : [
            "src/defines.php",
            "src/aliases.php"
        ]
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
