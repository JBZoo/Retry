{
    "name"              : "jbzoo/retry",
    "type"              : "library",
    "description"       : "PHP library providing retry functionality with multiple backoff strategies and jitter support",
    "license"           : "MIT",
    "keywords"          : ["jbzoo", "jitter", "retry", "backoff"],

    "authors"           : [
        {
            "name"  : "Joseph Szobody",
            "email" : "joseph@stechstudio.com",
            "role"  : "lead"
        },
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com"
        }
    ],

    "require"           : {
        "php" : ">=7.2"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.6.2",
        "jbzoo/jbdump"      : ">=1.5.4"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Retry\\" : "src"
        },
        "files" : [
            "src/defines.php",
            "src/aliases.php"
        ]
    },

    "conflict"          : {
        "stechstudio/backoff" : "*"
    },

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "2.x-dev"
        }
    }
}
